extends layout

block content
  h1 Login 
  p Please login below
  form(method='post', action='/users/login', enctype='application/json')
    .form-group
      label Username
      input.form-control(name='username', type='text',placeholder='Enter a Username')
    .form-group
      label Password
      input.form-control(name='password', type='password',placeholder='Password')
    input.btn.btn-default(name='submit', type='submit', value='Login')
