<h2>{{instructor.first_name}}'s Classes</h2>
{{#if instructor.classes}}
<table cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>Class ID</th>
      <th>Class Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each instructor.classes}}
      <tr>
        <td>{{class_id}}</td>
        <td>{{class_title}}</td>
        <td><a href="/classes/{{class_id}}/lessons">View Lessons</a></td>
        <td><a href="/instructors/classes/{{class_id}}/lessons/new">Add Lessons</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
  <p>This instructor does not have any classes</p>
{{/if}}
