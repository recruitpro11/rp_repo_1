<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
<h2>Edit This Job</h2>
<form id="regForm" method="post" action="/jobs/{{job._id}}/details/{{hiringManager_id}}/edit">
  <div>
    <label>Job Title: </label>
    <input type="text" name="job_title" value={{job.title}}>
  </div>
  <div>
    <label>Job Description: </label>
    <textarea name="job_description" id="hsTextAreaToBeReplaced">{{job.description}}</textarea>
    <script>
      // Replace the <textarea id="hsTextAreaToBeReplaced"> with a CKEditor
      CKEDITOR.replace( "hsTextAreaToBeReplaced" );
    </script>
  </div>



  <div id="list1" class="dropdown-check-list" tabindex="100">
    <span class="anchor">Required Skills</span>
    <ul class="items">
      <li><input type="checkbox" />Php </li>
      <li><input type="checkbox" />Java</li>
      <li><input type="checkbox" />C++ </li>
      <li><input type="checkbox" />Node </li>
      <li><input type="checkbox" />Language </li>
    </ul>
  </div>

  <script type="text/javascript">
    var checkList = document.getElementById('list1');
    checkList.getElementsByClassName('anchor')[0].onclick = function (evt) {
      if (checkList.classList.contains('visible'))
        checkList.classList.remove('visible');
      else
        checkList.classList.add('visible');
      }

  </script>


  <div>
    <label>Job Description File: </label>
    <input type="file" name="job_description_file">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>