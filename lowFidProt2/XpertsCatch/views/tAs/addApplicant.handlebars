<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
<h2>Add a New Applicant</h2>
<form id="regForm" method="post" enctype="multipart/form-data" action="/tAs/applicants/{{tA_id}}/add">
  <div>
    <label>First Name: </label>
    <input type="text" name="first_name">
  </div>
  <div>
    <label>Last Name: </label>
    <input type="text" name="last_name">
  </div>
  <div>
    <label>Email</label>
    <input type="text" name="email">
  </div>
  <div>
    <label>Additional Info</label>
    <input type="text" name="info">
  </div>   


</hr>
<h6></h6>


  <div id="list1" class="dropdown-check-list" name="skillsList" tabindex="100">
    <span class="anchor">Applicant's Skills</span>
    <ul class="items">
      <li><input type="checkbox" name="s1" />Php </li>
      <li><input type="checkbox" name="s2" />Java</li>
      <li><input type="checkbox" name="s3" />C++ </li>
      <li><input type="checkbox" name="s4" />Node </li>
      <li><input type="checkbox" name="s5" />Language </li>
    </ul>
  </div>
  <script type="text/javascript">
    var checkList = document.getElementById('list1');
    checkList.getElementsByClassName('anchor')[0].onclick = function (evt) {
      if (checkList.classList.contains('visible'))
        checkList.classList.remove('visible');
      else
        checkList.classList.add('visible');
      }
  </script>



</hr>
<h6></h6>


  <div>
    <label>Upload Applicant's Resume: </label>
    <input type="file" name="resume_file">
  </div>


<h6> and/or </h6>


  <div>
    <label>Write a resume/description for the Applicant: </label>
    <textarea name="description" id="hsTextAreaToBeReplaced"></textarea>
    <script type="text/javascript">
      // Replace the <textarea id="hsTextAreaToBeReplaced"> with a CKEditor
      CKEDITOR.replace( 'hsTextAreaToBeReplaced' );
      
