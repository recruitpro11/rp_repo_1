<h2>Add a New Applicant</h2>

<div>
	<label>First Name: </label>
	<input type="text" name="first_name" form="appForm">
</div>

<div>
	<label>Last Name: </label>
	<input type="text" name="last_name" form="appForm">
</div>

<div>
	<label>Email:</label>
	<input type="text" name="email" form="appForm">
</div>

<div>
	<label>Additional Info: </label>
	<input type="text" name="info"  form="appForm">
</div>   


<br>


<section>
  <a class="reg">Add a New Skill</a>
</section>



<div id="list1" class="dropdown-check-list" name="skillsList" tabindex="100">
	
	<span class="anchor">Applicant's Skills</span>
	
	<div id="checkbox-container"></div>

</div>

<script type="text/javascript">
	
	var checkList = document.getElementById('list1');
	checkList.classList.add('visible');
	checkList.getElementsByClassName('anchor')[0].onclick = function (evt) {
		if (checkList.classList.contains('visible'))
			checkList.classList.remove('visible');
		else
			checkList.classList.add('visible');
	}

</script>

<script type="text/javascript">

	{{#each skillsList}}

		var formName = "appForm";
		var skillId = '{{skill_name}}';
		var skillName = '{{skill_name}}';
		if(skillName == 'CPlusPlus' || skillName == 'cPlusPlus'){
			skillName = 'C++'
		}

		
		$("#checkbox-container").append(
			$("<ul class='items'><div></div></ul>").append(
				$("<label></label>").text(skillName).attr("for",skillId).append(
					$("<input type='checkbox'>").attr("form",formName).attr("id",skillId).attr("name",skillName).attr("onchange","$('#skillForm').submit();")
				)
			)
		);

	{{/each}}

</script>



